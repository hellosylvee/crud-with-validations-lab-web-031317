<h1>Add a New Song</h1>
<%= form_for(@song) do |f| %>
  <label>Song title:</label><br>
  <%= f.text_field :title %><br></br>

  <label>Released? (check if yes):</label>
  <%= f.check_box :released %><br></br>

  <label>Released year:</label><br>
  <%= f.text_field :release_year %><br></br>

  <label>Artist Name:</label><br>
  <%= f.text_field :artist_name %><br></br>

  <label>Genre:</label><br>
  <%= f.text_field :genre %><br></br>

  <%= f.submit %><br>
<% end %>
